<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:theme="@style/ScrollView"
    android:scrollbars="none"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".userCollections.UserCollectionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="top"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/eczar_semibold"
            android:gravity="left"
            android:paddingLeft="20dp"
            android:text="Your Collections"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.card.MaterialCardView
            app:strokeColor="@color/bottomnavhigh"
            app:strokeWidth="2dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/card"
            android:elevation="1dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/text_home">
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            app:strokeColor="@color/bottomnavhigh"
            app:strokeWidth="2dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/card"
            android:elevation="1dp"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/text_home">
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>